<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.brinfotech.feedbacksystem">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launcher_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup"
        tools:targetApi="m">


        <activity android:name=".ui.splashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.signatureView.SignatureViewActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />


        <activity android:name=".ui.loginScreen.LoginActivity" />

        <activity android:name=".ui.changePasswordView.ChangePasswordActivity" />

        <activity android:name=".ui.staffView.qrCodeScannerView.QrCodeScannerViewActivity" />
        <activity android:name=".ui.managerView.qrCodeScannerView.ManagerQrCodeScannerViewActivity" />
        <activity android:name=".ui.staffView.thankYouPage.ThankYouScreen" />

        <activity android:name=".ui.managerView.managerDashboard.ManageDashboardActivity" />

        <activity android:name=".ui.managerView.managerStaffView.StaffReportActivity" />
        <activity android:name=".ui.managerView.managerFireEvacuation.FireEvacuationActivity" />

        <activity android:name=".ui.fireMarshalView.dashboard.FireMarshalDashboardActivity" />
        <activity android:name=".ui.fireMarshalView.qrCodeScannerView.FireMarshalQrCodeScannerViewActivity" />
        <activity android:name=".ui.fireMarshalView.fireEvacuation.FireMarshalEvacuationActivity" />
        <activity android:name=".ui.adminView.AdminSiteSelectionScreen" />
        <activity android:name=".ui.adminView.adminDashboard.AdminDashboardActivity" />


        <activity
            android:name=".ui.staffView.dashboard.StaffDashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <service android:name=".firebasePushNotification.MyFireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".firebasePushNotification.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>