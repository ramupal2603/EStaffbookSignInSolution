<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="StaffButtonTheme">
        <item name="android:layout_marginLeft">@dimen/commonViewMargin</item>
        <item name="android:layout_marginRight">@dimen/commonViewMargin</item>
        <item name="android:layout_marginTop">@dimen/common_margin</item>
        <item name="android:background">@drawable/edt_background</item>

    </style>


</resources>
