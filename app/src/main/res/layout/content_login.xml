<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.loginScreen.LoginActivity"
    android:background="@color/colorWhite"
    tools:ignore="MissingDefaultResource"
    tools:showIn="@layout/activity_login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/ic_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="vertical">

        <com.brinfotech.feedbacksystem.customClasses.FontsTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Please Login"
            android:textColor="@color/grayColor"
            android:textSize="@dimen/_24sdp" />


        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtTextHeight"
            android:layout_marginTop="35dp"
            android:background="@drawable/edt_background"
            android:gravity="center"
            android:hint="Email Address"
            android:text=""
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/grayColor" />


        <EditText
            android:id="@+id/edtPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtTextHeight"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:gravity="center"
            android:hint="Password"
            android:text=""
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/grayColor" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edtTextHeight"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_border_color"
            android:text="Login"
            android:textColor="@color/whiteColor"
            android:textSize="22sp" />


    </LinearLayout>

    <com.brinfotech.feedbacksystem.customClasses.FontsTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="@string/login_bottom_title"
        android:textColor="#929292"
        android:textSize="@dimen/_18sdp"
        android:visibility="visible" />


</LinearLayout>